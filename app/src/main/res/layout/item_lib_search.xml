<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.njust.helper.library.search.LibSearchActivity.LibSearchAdapter" />

        <variable
            name="libSearch"
            type="com.njust.helper.library.search.LibSearchBean" />

        <variable
            name="position"
            type="int" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{(v)->LibSearchAdapter.onClick(v,libSearch.id)}"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="书名"
            android:singleLine="true"
            android:text="@{(position+1)+`.`+libSearch.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="作者"
            android:text="@{libSearch.author}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="出版社"
            android:text="@{libSearch.press}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>
</layout>
